<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivAskyResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/asky_logo_gratz" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvResultBox"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivAskyResult"
        android:layout_marginTop="2dp"
        app:cardBackgroundColor="@color/AskMeFaintWhiteFinnishWord"
        app:cardCornerRadius="20dp"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvRightAnswerAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/oikeita_vastauksia_x"
                android:textSize="24sp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvWrongAnswerAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/v_ri_vastauksia_x"
                android:textSize="24sp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tulos_x"
                android:textSize="24sp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:textStyle="bold"/>



        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/AskMeYellowGeneral"
        android:text="@string/palaa_p_valikkoon"
        android:textColor="@color/black"


        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvResultBox"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />


</androidx.constraintlayout.widget.ConstraintLayout>