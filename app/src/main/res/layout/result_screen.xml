<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|top"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="506dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvAskyGratz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivAskyResult"
                android:layout_width="249dp"
                android:layout_height="323dp"
                app:srcCompat="@drawable/asky_logo_gratz" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvResultBox"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/AskMeGraySettingsToggleButton"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvRightAnswerAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/oikeita_vastauksia_x"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tvNearlyCorrectAnswerAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="2dp"
                    android:text="Lähes oikein"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tvWrongAnswerAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/v_ri_vastauksia_x"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tvResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/tulos_x"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tvPersonalBest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="2dp"
                    android:text="Oma ennätys"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnRepeat"
            android:layout_width="335dp"
            android:layout_height="75dp"
            android:backgroundTint="@color/AskMeYellowGeneral"
            android:drawableLeft="@drawable/reset_icon"
            android:paddingLeft="32dp"
            android:text="Kertaa"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:cornerRadius="10dp"
            app:iconPadding="27dp"
            app:strokeColor="@color/black"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/btnReverse"
            android:layout_width="335dp"
            android:layout_height="75dp"
            android:backgroundTint="@color/AskMeYellowGeneral"
            android:drawableLeft="@drawable/shuffle_icon"
            android:text="Kysy toisinpäin"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:cornerRadius="10dp"
            app:iconPadding="15dp"
            app:strokeColor="@color/black"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/btnReturn"
            android:layout_width="335dp"
            android:layout_height="75dp"
            android:backgroundTint="@color/AskMeGraySettingsButton"


            android:drawableLeft="@drawable/back_icon"
            android:text="@string/palaa_p_valikkoon"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:cornerRadius="10dp"
            app:strokeColor="@color/black"
            app:strokeWidth="3dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>