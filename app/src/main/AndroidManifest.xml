<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/asky_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/asky_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AskMe"
        tools:targetApi="31">
        <activity
            android:name=".settings.SettingsScreen"
            android:exported="false"
            android:label="SettingsMain"
            android:theme="@style/Theme.AskMe" />
        <activity
            android:name=".exercise.ExerciseMain"
            android:label="ExerciseMain"
            android:theme="@style/Theme.AskMe"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".exercise.ChooseExercise"
            android:label="ChooseExercise"
            android:theme="@style/Theme.AskMe" />
        <activity
            android:name=".exercise.ResultScreen"
            android:label="ResultScreen"
            android:theme="@style/Theme.AskMe" />
        <activity
            android:name=".settings.HelpScreen"
            android:label="HelpScreen"
            android:theme="@style/Theme.AskMe"/>
        <activity
            android:name=".settings.InfoScreen"
            android:label="InfoScreen"
            android:theme="@style/Theme.AskMe"/>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>